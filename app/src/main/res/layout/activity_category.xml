<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/categoryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#F3E5F5"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="카테고리"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#E1BEE7"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="지역"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:background="#AB47BC" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/regionSearchEditText"
                    android:layout_width="345dp"
                    android:layout_height="72dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="15dp"
                    android:background="#FFFFFF"
                    android:hint="지역을 검색하세요"
                    android:padding="8dp" />

            </RelativeLayout>

            <Button
                android:id="@+id/regionConfirmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#D1C4E9"
                android:text="확인"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="#E1BEE7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="분야"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#AB47BC" />

        <CheckBox
            android:id="@+id/categoryClothing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="의류 브랜드"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/categoryAnimation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="애니메이션"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/categoryDessert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="디저트"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/categoryIdol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이돌"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/categoryOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기타"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#9C27B0"
            android:text="홈"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>